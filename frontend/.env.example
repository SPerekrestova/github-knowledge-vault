# ============================================================
# CONNECTION CONFIGURATION
# ============================================================

# Backend API URL (REST endpoints)
VITE_API_BASE_URL=http://localhost:3001

# WebSocket URL (chat streaming)
VITE_WS_URL=ws://localhost:3001

# ============================================================
# HEALTH CHECK SETTINGS
# ============================================================

# Interval between health checks (milliseconds)
VITE_HEALTH_CHECK_INTERVAL=30000

# Health check timeout (milliseconds)
VITE_HEALTH_CHECK_TIMEOUT=5000

# ============================================================
# WEBSOCKET SETTINGS
# ============================================================

# Enable automatic reconnection
VITE_WS_RECONNECT=true

# Maximum reconnection attempts
VITE_WS_MAX_RECONNECT_ATTEMPTS=5

# Initial reconnect delay (milliseconds)
VITE_WS_RECONNECT_INTERVAL=1000

# Maximum reconnect delay after backoff (milliseconds)
VITE_WS_MAX_RECONNECT_INTERVAL=30000

# Heartbeat interval (milliseconds)
VITE_WS_HEARTBEAT_INTERVAL=30000

# ============================================================
# API SETTINGS
# ============================================================

# Request timeout (milliseconds)
VITE_API_TIMEOUT=10000

# ============================================================
# DEVELOPMENT SETTINGS
# ============================================================

# Mock backend mode - bypasses health checks for frontend-only development
# Set to "true" to enable mock mode (no backend required)
VITE_MOCK_BACKEND=false
